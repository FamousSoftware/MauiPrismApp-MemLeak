<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="MauiPrismApp.Views.MainPage">

  <ScrollView>
    <VerticalStackLayout VerticalOptions="Start">

      <Label Text="Page 1" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,20"/>

      <Button Text="Go to Page 2" Command="{Binding NavPage2Command}" WidthRequest="300" Margin="0,20"/>

      <Button Text="Collect Garbage" Command="{Binding CollectGarbageCommand}" WidthRequest="300" Margin="0,20"/>

    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
